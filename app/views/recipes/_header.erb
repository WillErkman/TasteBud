<div class="container  m-3 bg-light align-items-center">
	<div class="row p-2 align-items-center">
	
		<div class="col-8 m-auto">
			<div class="pb-1">
				<div class="container d-flex flex-row align-items-baseline justify-content-between m-auto">
					<h1 class="me-4"><%= recipe.title %></h1>
					<h4 class=""><%= link_to recipe.author.username, recipe.author, class: "text-light-emphasis text-decoration-none" %></h4>
				</div>
				<div class="mb-2 container d-flex flex-row">
					<% recipe.tags.each do |tag| %>
						<h5 class="me-3"><%= link_to tag.name.capitalize, tag_recipes_path(tag), class: "text-decoration-none" %></h5>
					<% end %>
				</div>
			</div>
			<div class="container my-2">
				<p class="d-block m-0"><%= recipe.description %></p>
			</div>
		</div>
		
		<div class="col-4 d-flex justify-content-between align-items-center p-3 m-0">
			<table class="table text-center">
				<tr>
					<th>Cook Time</th>
					<th>Prep Time</th>
					<th>Total Time</th>
					<th>Yield</th>
				</tr>
				<tr>
					<td><%= recipe.cook_time %></td>
					<td><%= recipe.prep_time %></td>
					<td><%= recipe.total_time %></td>
					<td><%= recipe.yield %></td>
				</tr>
			</table>
		</div>
	</div>
</div>

