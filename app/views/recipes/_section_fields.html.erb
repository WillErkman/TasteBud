<div class="container p-1" data-template="section">
	<div class="row border-bottom border-black m-auto p-2">
		<div class="col">
			<div class="row mb-3">
				<div class="col">
					<%= f.label :title, "Title", class: "form-label h4" %>
					<%= f.text_field :title, class: "form-control" %>
				</div>
			</div>
			<div class="row mb-3">
				<div class="col">
					<%= f.label :description, "Description", class: "form-label h5" %>
					<%= f.text_area :description, class: "form-control" %>
				</div>
			</div>
		</div>
	</div>
	
	<!-- Step Fields -->
	<div class="row" data-list="step">
		<%= f.fields :steps do |sf| %>
			<%= render 'step_fields', f: sf %>
		<% end %>
		<%= add_child_button 'Add Step', f, :steps, partial: 'step_fields' %>
	</div>
	
	<div class="row m-auto p-3">
		<%= remove_child_button 'Remove Section', f %>
	</div>
</div>
