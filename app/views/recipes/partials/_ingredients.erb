<div class="container bg-light p-3 w-75">
	<h2 class="p-1">Ingredients</h2>
	
	<ul class="list-group list-group-flush">
		<% ingredients.each do |ingredient| %>
			<li class="list-group-item">
				<span><%= check_box_tag("", class: "form-check-input border-2 border-dark") %></span>
				<span><%= ingredient.quantity %></span>
				<span><%= ingredient.unit %></span>
				<span><%= link_to ingredient.ingredient.name, ingredient.ingredient, class: "text-decoration-none" %></span>
				<span><%= ingredient.notes %></span>
			</li>
		<% end %>
	</ul>

</div>