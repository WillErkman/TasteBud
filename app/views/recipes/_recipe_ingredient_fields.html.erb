<div id="recipe-ingredients-fields" class="container d-flex">
	<div data-model="recipe-ingredient" data-template="true">
		<div>
			<%= f.fields_for :ingredient_attributes do |ingf| %>
				<%= ingf.label :name, "Ingredient Name" %>
				<%= ingf.text_field :name %>
			<% end %>
		</div>
		<div>
			<%= f.label :quantity, "Quantity" %>
			<%= f.text_field :quantity, class: "w-25" %>
		</div>
	</div>
	<%= link_to_remove_association 'Remove Ingredient', f %>
</div>

